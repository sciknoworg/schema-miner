{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Atomic Layer Etching Process Schema",
    "description": "Schema for representing the Atomic Layer Etching process",
    "type": "object",
    "properties": {
        "directionality": {
            "description": "Desired directionality of the etch process (anisotropic or isotropic)",
            "type": "string",
            "enum": [
                "anisotropic",
                "isotropic"
            ]
        },
        "reactants": {
            "description": "Reactants used in the etching process",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "formula": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "formula"
                ]
            }
        },
        "material": {
            "description": "Material being etched",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "chemical_composition": {
                    "description": "Chemical composition of the material",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "element": {
                                "type": "string"
                            },
                            "percentage": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "element",
                            "percentage"
                        ]
                    }
                }
            },
            "required": [
                "name",
                "chemical_composition"
            ]
        },
        "temperature_window": {
            "description": "Temperature range for optimal etch rate (in Celsius)",
            "type": "object",
            "properties": {
                "min_temp": {
                    "type": "number"
                },
                "max_temp": {
                    "type": "number"
                }
            },
            "required": [
                "min_temp",
                "max_temp"
            ]
        },
        "ion_energy_window": {
            "description": "Ion energy range for optimal etch rate (in eV)",
            "type": "object",
            "properties": {
                "min_ion_energy": {
                    "type": "number"
                },
                "max_ion_energy": {
                    "type": "number"
                }
            },
            "required": [
                "min_ion_energy",
                "max_ion_energy"
            ]
        },
        "uniformity": {
            "description": "Uniformity of the etch process (in %)",
            "type": "string"
        },
        "selectivity": {
            "description": "Selectivity of the etch process",
            "type": "object",
            "properties": {
                "material_selectivity": {
                    "description": "Selectivity of the etch process for the material",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name"
                        ]
                    }
                }
            },
            "required": [
                "material_selectivity"
            ]
        },
        "etched_material_properties": {
            "description": "Properties of the post-etch material",
            "type": "object",
            "properties": {
                "roughness": {
                    "description": "Roughness of the post-etch material (in nm)",
                    "type": "number"
                },
                "crystallinity": {
                    "description": "Crystallinity of the post-etch material",
                    "type": "string",
                    "enum": [
                        "amorphous",
                        "crystalline"
                    ]
                },
                "chemical_composition": {
                    "description": "Chemical composition of the post-etch material",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "element": {
                                "type": "string"
                            },
                            "percentage": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "element",
                            "percentage"
                        ]
                    }
                },
                "refractive_index": {
                    "description": "Refractive index of the post-etch material",
                    "type": "number"
                }
            }
        },
        "ale_process": {
            "description": "Atomic Layer Etching process used",
            "type": "object",
            "properties": {
                "type": {
                    "description": "Type of Atomic Layer Etching process (thermal or plasma)",
                    "type": "string",
                    "enum": [
                        "thermal",
                        "plasma"
                    ]
                },
                "etch_per_cycle": {
                    "description": "Etch per cycle (in nm)",
                    "type": "number"
                }
            },
            "required": [
                "type",
                "etch_per_cycle"
            ]
        },
        "ale_synergy": {
            "description": "ALE synergy (in %)",
            "type": "number"
        },
        "surface_binding_energy": {
            "description": "Surface binding energy of the material (in eV)",
            "type": "number"
        },
        "ion_yield": {
            "description": "Ion yield of the material",
            "type": "number"
        },
        "ion_flux": {
            "description": "Ion flux of the material (in ions/cm^2)",
            "type": "number"
        },
        "desorption_energy": {
            "description": "Desorption energy of the material (in eV)",
            "type": "number"
        },
        "surface_morphology": {
            "description": "Surface morphology of the material",
            "type": "string"
        },
        "co_reactant": {
            "description": "Co-reactant used in the etching process",
            "type": "object",
            "properties": {
                "type": {
                    "description": "Type of co-reactant (e.g. ions, electrons, photons)",
                    "type": "string"
                },
                "energy": {
                    "description": "Energy of the co-reactant (in eV)",
                    "type": "number"
                }
            },
            "required": [
                "type",
                "energy"
            ]
        },
        "cycle_time": {
            "description": "Cycle time of the etching process (in seconds)",
            "type": "number"
        },
        "throughput": {
            "description": "Throughput of the etching process (in nm/s)",
            "type": "number"
        },
        "hacac_dosing": {
            "description": "Dosing of Hacac in the etching process",
            "type": "object",
            "properties": {
                "exposure_time": {
                    "description": "Exposure time of Hacac (in seconds)",
                    "type": "number"
                },
                "pressure": {
                    "description": "Pressure of Hacac (in Torr)",
                    "type": "number"
                }
            },
            "required": [
                "exposure_time",
                "pressure"
            ]
        },
        "o2_plasma_dosing": {
            "description": "Dosing of O2 plasma in the etching process",
            "type": "object",
            "properties": {
                "exposure_time": {
                    "description": "Exposure time of O2 plasma (in seconds)",
                    "type": "number"
                },
                "pressure": {
                    "description": "Pressure of O2 plasma (in mTorr)",
                    "type": "number"
                }
            },
            "required": [
                "exposure_time",
                "pressure"
            ]
        },
        "etch_rate": {
            "description": "Etch rate of the material (in nm/cycle)",
            "type": "number"
        },
        "etch_selectivity": {
            "description": "Etch selectivity of the material",
            "type": "object",
            "properties": {
                "material": {
                    "description": "Material for which the etch selectivity is measured",
                    "type": "string"
                },
                "value": {
                    "description": "Etch selectivity value",
                    "type": "number"
                }
            },
            "required": [
                "material",
                "value"
            ]
        },
        "plasma_ale": {
            "description": "Plasma Atomic Layer Etching process",
            "type": "object",
            "properties": {
                "sf6_plasma": {
                    "description": "SF6 plasma used in the etching process",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of SF6 plasma (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of SF6 plasma (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "tma_dosing": {
                    "description": "TMA dosing used in the etching process",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of TMA (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of TMA (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "etch_per_cycle": {
                    "description": "Etch per cycle (in nm)",
                    "type": "number"
                }
            },
            "required": [
                "sf6_plasma",
                "tma_dosing",
                "etch_per_cycle"
            ]
        },
        "synergy_test": {
            "description": "Synergy test for ALE process",
            "type": "object",
            "properties": {
                "modification_step": {
                    "description": "Modification step of the ALE process",
                    "type": "object",
                    "properties": {
                        "reaction_time": {
                            "description": "Reaction time of the modification step (in seconds)",
                            "type": "number"
                        },
                        "reaction_energy": {
                            "description": "Reaction energy of the modification step (in eV)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "reaction_time",
                        "reaction_energy"
                    ]
                },
                "removal_step": {
                    "description": "Removal step of the ALE process",
                    "type": "object",
                    "properties": {
                        "removal_time": {
                            "description": "Removal time of the removal step (in seconds)",
                            "type": "number"
                        },
                        "removal_energy": {
                            "description": "Removal energy of the removal step (in eV)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "removal_time",
                        "removal_energy"
                    ]
                }
            },
            "required": [
                "modification_step",
                "removal_step"
            ]
        },
        "saturation_curve": {
            "description": "Saturation curve for ALE process",
            "type": "object",
            "properties": {
                "etch_amount": {
                    "description": "Etch amount of the ALE process (in nm)",
                    "type": "number"
                },
                "time": {
                    "description": "Time of the ALE process (in seconds)",
                    "type": "number"
                },
                "energy": {
                    "description": "Energy of the ALE process (in eV)",
                    "type": "number"
                }
            },
            "required": [
                "etch_amount",
                "time",
                "energy"
            ]
        },
        "energy_scan": {
            "description": "Energy scan for ALE process",
            "type": "object",
            "properties": {
                "etch_per_cycle": {
                    "description": "Etch per cycle of the ALE process (in nm)",
                    "type": "number"
                },
                "energy": {
                    "description": "Energy of the ALE process (in eV)",
                    "type": "number"
                }
            },
            "required": [
                "etch_per_cycle",
                "energy"
            ]
        },
        "material_properties": {
            "description": "Properties of the material",
            "type": "object",
            "properties": {
                "surface_binding_energy": {
                    "description": "Surface binding energy of the material (in eV)",
                    "type": "number"
                },
                "ion_yield": {
                    "description": "Ion yield of the material",
                    "type": "number"
                },
                "ion_flux": {
                    "description": "Ion flux of the material (in ions/cm^2)",
                    "type": "number"
                },
                "desorption_energy": {
                    "description": "Desorption energy of the material (in eV)",
                    "type": "number"
                },
                "surface_morphology": {
                    "description": "Surface morphology of the material",
                    "type": "string"
                }
            }
        },
        "thermal_ale": {
            "description": "Thermal Atomic Layer Etching process",
            "type": "object",
            "properties": {
                "reactants": {
                    "description": "Reactants used in the thermal ALE process",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "formula": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "formula"
                        ]
                    }
                },
                "temperature": {
                    "description": "Temperature of the thermal ALE process (in Celsius)",
                    "type": "number"
                },
                "etch_rate": {
                    "description": "Etch rate of the material (in nm/cycle)",
                    "type": "number"
                },
                "selectivity": {
                    "description": "Selectivity of the etch process",
                    "type": "object",
                    "properties": {
                        "material": {
                            "description": "Material for which the etch selectivity is measured",
                            "type": "string"
                        },
                        "value": {
                            "description": "Etch selectivity value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "material",
                        "value"
                    ]
                }
            }
        },
        "mo_s2_ale": {
            "description": "MoS2 Atomic Layer Etching process",
            "type": "object",
            "properties": {
                "mo_f6": {
                    "description": "MoF6 used in the etching process",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of MoF6 (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of MoF6 (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "h2o": {
                    "description": "H2O used in the etching process",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of H2O (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of H2O (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "etch_per_cycle": {
                    "description": "Etch per cycle (in nm)",
                    "type": "number"
                }
            },
            "required": [
                "mo_f6",
                "h2o",
                "etch_per_cycle"
            ]
        },
        "etchant_properties": {
            "description": "Properties of the etchant",
            "type": "object",
            "properties": {
                "mo_f6": {
                    "description": "Properties of MoF6",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of MoF6 (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of MoF6 (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "h2o": {
                    "description": "Properties of H2O",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of H2O (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of H2O (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                }
            }
        },
        "tma_dosing": {
            "description": "TMA dosing used in the etching process",
            "type": "object",
            "properties": {
                "exposure_time": {
                    "description": "Exposure time of TMA (in seconds)",
                    "type": "number"
                },
                "pressure": {
                    "description": "Pressure of TMA (in mTorr)",
                    "type": "number"
                }
            },
            "required": [
                "exposure_time",
                "pressure"
            ]
        },
        "hf_dosing": {
            "description": "HF dosing used in the etching process",
            "type": "object",
            "properties": {
                "exposure_time": {
                    "description": "Exposure time of HF (in seconds)",
                    "type": "number"
                },
                "pressure": {
                    "description": "Pressure of HF (in mTorr)",
                    "type": "number"
                }
            },
            "required": [
                "exposure_time",
                "pressure"
            ]
        },
        "al2o3_ale": {
            "description": "Al2O3 Atomic Layer Etching process",
            "type": "object",
            "properties": {
                "tma": {
                    "description": "TMA used in the etching process",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of TMA (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of TMA (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "hf": {
                    "description": "HF used in the etching process",
                    "type": "object",
                    "properties": {
                        "exposure_time": {
                            "description": "Exposure time of HF (in seconds)",
                            "type": "number"
                        },
                        "pressure": {
                            "description": "Pressure of HF (in mTorr)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "exposure_time",
                        "pressure"
                    ]
                },
                "etch_rate": {
                    "description": "Etch rate of the material (in nm/cycle)",
                    "type": "number"
                }
            }
        }
    }
}