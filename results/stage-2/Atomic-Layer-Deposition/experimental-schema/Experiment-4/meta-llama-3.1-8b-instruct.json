{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Atomic Layer Deposition (ALD) Process",
    "description": "Schema for the ALD process, including parameters and properties",
    "type": "object",
    "properties": {
        "reactantSelection": {
            "type": "object",
            "description": "Selection of the precursor and co-reactant",
            "properties": {
                "precursor": {
                    "type": "string",
                    "description": "The precursor used in the process"
                },
                "coReactor": {
                    "type": "string",
                    "description": "The co-reactant used in the process"
                },
                "precursorType": {
                    "type": "string",
                    "description": "Type of precursor (e.g., solid, liquid, gas)"
                },
                "precursorChemicalFormula": {
                    "type": "string",
                    "description": "Chemical formula of the precursor"
                },
                "precursorMeltingPoint": {
                    "type": "number",
                    "description": "Melting point of the precursor in \u00b0C"
                },
                "precursorDecompositionTemperature": {
                    "type": "number",
                    "description": "Temperature at which the precursor decomposes in \u00b0C"
                },
                "precursorPulseLength": {
                    "type": "number",
                    "description": "Length of the precursor pulse in seconds"
                },
                "TDMATReaction": {
                    "type": "object",
                    "description": "TDMAT reaction parameters",
                    "properties": {
                        "TDMATExposureTime": {
                            "type": "number",
                            "description": "TDMAT exposure time in seconds"
                        },
                        "TDMATPressure": {
                            "type": "number",
                            "description": "TDMAT pressure in Torr"
                        },
                        "TDMATPurgeTime": {
                            "type": "number",
                            "description": "TDMAT purge time in seconds"
                        }
                    },
                    "required": [
                        "TDMATExposureTime",
                        "TDMATPressure",
                        "TDMATPurgeTime"
                    ]
                }
            },
            "required": [
                "precursor",
                "coReactor",
                "precursorType",
                "precursorChemicalFormula",
                "precursorMeltingPoint",
                "precursorDecompositionTemperature",
                "precursorPulseLength",
                "TDMATReaction"
            ]
        },
        "chemicalComposition": {
            "type": "object",
            "description": "Composition of the deposited material",
            "properties": {
                "elements": {
                    "type": "array",
                    "description": "Elements present in the deposited material",
                    "items": {
                        "type": "string"
                    }
                },
                "stoichiometry": {
                    "type": "object",
                    "description": "Stoichiometry of the deposited material",
                    "properties": {
                        "precursor": {
                            "type": "number",
                            "description": "Stoichiometry ratio of the precursor"
                        },
                        "coReactor": {
                            "type": "number",
                            "description": "Stoichiometry ratio of the co-reactant"
                        }
                    },
                    "required": [
                        "precursor",
                        "coReactor"
                    ]
                }
            },
            "required": [
                "elements",
                "stoichiometry"
            ]
        },
        "thicknessControl": {
            "type": "object",
            "description": "Thickness control parameters",
            "properties": {
                "growthPerCycle": {
                    "type": "number",
                    "description": "Growth per cycle (GPC) in nm or atoms/cm^2"
                },
                "filmThickness": {
                    "type": "number",
                    "description": "Film thickness in nm"
                },
                "cycleTime": {
                    "type": "number",
                    "description": "Cycle time in seconds"
                },
                "purgeTime": {
                    "type": "number",
                    "description": "Purge time in seconds"
                }
            },
            "required": [
                "growthPerCycle",
                "filmThickness",
                "cycleTime",
                "purgeTime"
            ]
        },
        "saturation": {
            "type": "object",
            "description": "Saturation parameters",
            "properties": {
                "precursorDosingTime": {
                    "type": "number",
                    "description": "Precursor dosing time in seconds"
                },
                "coReactorExposureTime": {
                    "type": "number",
                    "description": "Co-reactant exposure time in seconds"
                },
                "purgeTime": {
                    "type": "number",
                    "description": "Purge time in seconds"
                }
            },
            "required": [
                "precursorDosingTime",
                "coReactorExposureTime",
                "purgeTime"
            ]
        },
        "materialProperties": {
            "type": "object",
            "description": "Material properties",
            "properties": {
                "opticalProperties": {
                    "type": "object",
                    "description": "Optical properties",
                    "properties": {
                        "refractiveIndex": {
                            "type": "number",
                            "description": "Refractive index"
                        },
                        "absorptionCoef": {
                            "type": "number",
                            "description": "Absorption coefficient"
                        }
                    },
                    "required": [
                        "refractiveIndex",
                        "absorptionCoef"
                    ]
                },
                "electricalProperties": {
                    "type": "object",
                    "description": "Electrical properties",
                    "properties": {
                        "resistivity": {
                            "type": "number",
                            "description": "Resistivity in ohm-cm"
                        },
                        "carrierDensity": {
                            "type": "number",
                            "description": "Carrier density in cm^-3"
                        },
                        "mobility": {
                            "type": "number",
                            "description": "Mobility in cm^2/V-s"
                        }
                    },
                    "required": [
                        "resistivity",
                        "carrierDensity",
                        "mobility"
                    ]
                }
            },
            "required": [
                "opticalProperties",
                "electricalProperties"
            ]
        },
        "temperatureDependence": {
            "type": "object",
            "description": "Temperature dependence parameters",
            "properties": {
                "depositionTemperature": {
                    "type": "number",
                    "description": "Deposition temperature in \u00b0C"
                },
                "ALDWindow": {
                    "type": "object",
                    "description": "ALD window parameters",
                    "properties": {
                        "GPC": {
                            "type": "number",
                            "description": "GPC in nm or atoms/cm^2"
                        },
                        "temperatureRange": {
                            "type": "array",
                            "description": "Temperature range in \u00b0C",
                            "items": {
                                "type": "number"
                            }
                        }
                    },
                    "required": [
                        "GPC",
                        "temperatureRange"
                    ]
                }
            },
            "required": [
                "depositionTemperature",
                "ALDWindow"
            ]
        },
        "uniformity": {
            "type": "object",
            "description": "Uniformity parameters",
            "properties": {
                "thicknessVariation": {
                    "type": "number",
                    "description": "Thickness variation in %"
                },
                "uniformity": {
                    "type": "array",
                    "description": "Uniformity values",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "thicknessVariation",
                "uniformity"
            ]
        },
        "conformality": {
            "type": "object",
            "description": "Conformality parameters",
            "properties": {
                "conformality": {
                    "type": "number",
                    "description": "Conformality value"
                },
                "aspectRatio": {
                    "type": "number",
                    "description": "Aspect ratio of the trench or via"
                }
            },
            "required": [
                "conformality",
                "aspectRatio"
            ]
        },
        "nucleationBehavior": {
            "type": "object",
            "description": "Nucleation behavior parameters",
            "properties": {
                "nucleationMode": {
                    "type": "string",
                    "description": "Nucleation mode (e.g., island growth, layer-by-layer)"
                },
                "growthMode": {
                    "type": "string",
                    "description": "Growth mode (e.g., island growth, layer-by-layer)"
                }
            },
            "required": [
                "nucleationMode",
                "growthMode"
            ]
        },
        "otherAspects": {
            "type": "object",
            "description": "Other aspects",
            "properties": {
                "safety": {
                    "type": "boolean",
                    "description": "Safety considerations (True/False)"
                },
                "filmStability": {
                    "type": "boolean",
                    "description": "Film stability considerations (True/False)"
                },
                "reproducibility": {
                    "type": "boolean",
                    "description": "Reproducibility considerations (True/False)"
                },
                "precursorConsumption": {
                    "type": "number",
                    "description": "Precursor consumption rate"
                },
                "precursorStability": {
                    "type": "boolean",
                    "description": "Precursor stability considerations (True/False)"
                },
                "literatureComparison": {
                    "type": "boolean",
                    "description": "Literature comparison (True/False)"
                },
                "devicePerformance": {
                    "type": "boolean",
                    "description": "Device performance considerations (True/False)"
                }
            },
            "required": [
                "safety",
                "filmStability",
                "reproducibility",
                "precursorConsumption",
                "precursorStability",
                "literatureComparison",
                "devicePerformance"
            ]
        }
    },
    "required": [
        "reactantSelection",
        "chemicalComposition",
        "thicknessControl",
        "saturation",
        "materialProperties",
        "temperatureDependence",
        "uniformity",
        "conformality",
        "nucleationBehavior",
        "otherAspects"
    ]
}