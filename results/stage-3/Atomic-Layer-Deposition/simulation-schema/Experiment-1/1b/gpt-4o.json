{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Atomic Layer Deposition (ALD) Process Schema",
    "type": "object",
    "properties": {
        "simulationParameters": {
            "type": "object",
            "description": "Parameters and methodologies used in the ALD simulation.",
            "properties": {
                "methods": {
                    "type": "array",
                    "description": "Computational methods used in the ALD process simulation.",
                    "items": {
                        "type": "string",
                        "enum": [
                            "DFT",
                            "HF",
                            "kMC",
                            "MD",
                            "CFD",
                            "ReaxFF"
                        ]
                    }
                },
                "methodDetails": {
                    "type": "object",
                    "description": "Details specific to the computational methods used.",
                    "properties": {
                        "timestep": {
                            "type": "number",
                            "description": "Timestep used in MD simulations.",
                            "unit": "fs"
                        },
                        "functional": {
                            "type": "string",
                            "description": "Functional used in DFT calculations, e.g., B3LYP."
                        },
                        "basisSet": {
                            "type": "string",
                            "description": "Basis set used in quantum chemical calculations, e.g., 6-31G(d,p)."
                        }
                    }
                },
                "methodSource": {
                    "type": "string",
                    "description": "Indicates if the study was simulation-based, experimental, or a combination, and which properties were derived from each.",
                    "enum": [
                        "Simulation",
                        "Experiment",
                        "Simulation and Experiment"
                    ]
                }
            }
        },
        "materials": {
            "type": "object",
            "description": "Materials involved in the ALD process.",
            "properties": {
                "precursors": {
                    "type": "array",
                    "description": "List of precursors used in the ALD process.",
                    "items": {
                        "type": "string"
                    }
                },
                "coReactants": {
                    "type": "array",
                    "description": "List of co-reactants used in the ALD process.",
                    "items": {
                        "type": "string"
                    }
                },
                "substrates": {
                    "type": "array",
                    "description": "List of substrates used in the ALD process.",
                    "items": {
                        "type": "string"
                    }
                },
                "encapsulationMaterials": {
                    "type": "array",
                    "description": "Materials used for encapsulation in selective growth.",
                    "items": {
                        "type": "string"
                    }
                },
                "ligandModification": {
                    "type": "object",
                    "description": "Details of any modifications to ligands, such as conversion from methoxy to hydroxyl.",
                    "properties": {
                        "originalLigand": {
                            "type": "string",
                            "description": "Original ligand before modification."
                        },
                        "modifiedLigand": {
                            "type": "string",
                            "description": "Ligand after modification."
                        }
                    }
                }
            }
        },
        "growthRate": {
            "type": "object",
            "description": "Information related to the growth rate of the film.",
            "properties": {
                "rate": {
                    "type": "number",
                    "description": "Growth rate of the film per cycle.",
                    "unit": "angstroms/cycle"
                },
                "temperatureDependence": {
                    "type": "number",
                    "description": "Temperature dependence of the growth rate.",
                    "unit": "Celsius"
                }
            }
        },
        "surfaceProperties": {
            "type": "object",
            "description": "Properties related to surface reactions and coverage.",
            "properties": {
                "desorptionRate": {
                    "type": "number",
                    "description": "Rate of surface desorption.",
                    "unit": "atoms/second"
                },
                "diffusionRate": {
                    "type": "number",
                    "description": "Rate of surface diffusion.",
                    "unit": "atoms/second"
                },
                "reactionRate": {
                    "type": "number",
                    "description": "Rate of surface reactions.",
                    "unit": "atoms/second"
                },
                "stickingCoefficient": {
                    "type": "number",
                    "description": "Probability of an adsorbate sticking to the surface."
                },
                "bindingAffinity": {
                    "type": "number",
                    "description": "Binding affinity of the adsorbate to the surface.",
                    "unit": "kJ/mol"
                },
                "surfaceCoverage": {
                    "type": "object",
                    "description": "Coverage of the surface by the adsorbate.",
                    "properties": {
                        "coverage": {
                            "type": "number",
                            "description": "Percentage of surface coverage.",
                            "unit": "%"
                        },
                        "timeDependent": {
                            "type": "boolean",
                            "description": "Indicates if surface coverage is time-dependent."
                        }
                    }
                },
                "chemisorptionCharacteristics": {
                    "type": "object",
                    "description": "Details about chemisorption, steric hindrance, and ligand effects.",
                    "properties": {
                        "chemisorbedPrecursorDensity": {
                            "type": "number",
                            "description": "Density of chemisorbed precursor.",
                            "unit": "molecules/nm^2"
                        },
                        "stericHindrance": {
                            "type": "string",
                            "description": "Description of steric hindrance effects."
                        },
                        "surfaceHydroxylConcentration": {
                            "type": "number",
                            "description": "Concentration of surface hydroxyl groups.",
                            "unit": "nm^-2"
                        }
                    }
                }
            }
        },
        "filmProperties": {
            "type": "object",
            "description": "Properties of the deposited film.",
            "properties": {
                "uniformity": {
                    "type": "number",
                    "description": "Uniformity of the film.",
                    "unit": "%"
                },
                "roughness": {
                    "type": "number",
                    "description": "Surface roughness of the film.",
                    "unit": "nm"
                },
                "density": {
                    "type": "number",
                    "description": "Density of the film.",
                    "unit": "g/cm^3"
                },
                "temperatureProfile": {
                    "type": "array",
                    "description": "Temperature profile across the film.",
                    "items": {
                        "type": "number"
                    },
                    "unit": "Celsius"
                },
                "chemicalComposition": {
                    "type": "array",
                    "description": "Elemental composition of the film.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "reactorConditions": {
            "type": "object",
            "description": "Conditions inside the reactor during ALD.",
            "properties": {
                "pressure": {
                    "type": "number",
                    "description": "Pressure inside the reactor.",
                    "unit": "Pascal"
                },
                "carrierGasFlow": {
                    "type": "number",
                    "description": "Flow rate of the carrier gas.",
                    "unit": "sccm"
                },
                "precursorFlow": {
                    "type": "number",
                    "description": "Flow rate of the precursor gas.",
                    "unit": "sccm"
                },
                "gapDistance": {
                    "type": "number",
                    "description": "Gap distance in the reactor.",
                    "unit": "mm"
                }
            }
        },
        "selectiveGrowthMechanism": {
            "type": "object",
            "description": "Mechanism of selective growth in ALD.",
            "properties": {
                "facetPreference": {
                    "type": "string",
                    "description": "Preferred facet for selective growth, e.g., Pt(111)."
                },
                "substituentEffects": {
                    "type": "string",
                    "description": "Effects of substituents on precursor selectivity."
                },
                "blockingMechanisms": {
                    "type": "object",
                    "description": "Mechanisms by which inhibitors block non-growth surfaces.",
                    "properties": {
                        "stericBlocking": {
                            "type": "string",
                            "description": "Description of steric blocking effects, including adsorption prevention and reactivity reduction."
                        },
                        "chemicalPassivation": {
                            "type": "string",
                            "description": "Description of chemical passivation effects on the surface."
                        }
                    }
                }
            }
        },
        "nucleationProcess": {
            "type": "object",
            "description": "Details about the nucleation process during ALD.",
            "properties": {
                "nucleationDelay": {
                    "type": "number",
                    "description": "Delay in nucleation during the initial ALD cycles.",
                    "unit": "cycles"
                },
                "selfCleaningEffect": {
                    "type": "boolean",
                    "description": "Indicates if a self-cleaning effect is observed during the ALD process."
                }
            }
        }
    },
    "required": [
        "simulationParameters",
        "materials",
        "growthRate",
        "surfaceProperties",
        "filmProperties"
    ]
}