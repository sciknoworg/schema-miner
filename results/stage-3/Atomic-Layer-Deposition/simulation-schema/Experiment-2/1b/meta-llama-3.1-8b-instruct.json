{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Atomic Layer Deposition (ALD) Process",
    "description": "JSON schema representing the ALD process parameters and observables",
    "type": "object",
    "properties": {
        "simulationParameters": {
            "type": "object",
            "properties": {
                "methods": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "Methods used (e.g., DFT, HF, post-HF, ML + kMC, MD)"
                    },
                    "description": "List of methods used for simulations/calculations"
                },
                "materials": {
                    "type": "array",
                    "description": "Materials involved in the ALD process.",
                    "items": {
                        "type": "string"
                    },
                    "examples": [
                        "Al2O3",
                        "TiO2",
                        "Cu(acac)2",
                        "Ti(CpMe5)",
                        "ZrO2",
                        "HfO2",
                        "Pt on graphene",
                        "Zinc Oxide",
                        "Silicon precursors",
                        "Carbon precursors"
                    ]
                },
                "decompositionAndBinding": {
                    "type": "object",
                    "properties": {
                        "mechanisms": {
                            "type": "string",
                            "description": "Decomposition and binding mechanisms/mode (kinetics and thermodynamics)"
                        },
                        "pathways": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "Pathways for decomposition and binding (e.g., R1a, R1b, R2a, R2b, R3a, R3b)"
                            },
                            "description": "List of pathways for decomposition and binding"
                        }
                    },
                    "description": "Decomposition and binding properties"
                },
                "growthRate": {
                    "type": "object",
                    "properties": {
                        "rate": {
                            "type": "number",
                            "unit": "nm/min",
                            "description": "Growth rate"
                        },
                        "temperatureDependency": {
                            "type": "object",
                            "properties": {
                                "kinetics": {
                                    "type": "string",
                                    "description": "Temperature dependence of growth rate (kinetics)"
                                }
                            },
                            "description": "Temperature dependence of growth rate"
                        }
                    },
                    "description": "Growth rate properties"
                },
                "surfaceDesorptionDiffusionReactionRates": {
                    "type": "object",
                    "properties": {
                        "rates": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "Surface desorption, diffusion, and reaction rates"
                            },
                            "description": "List of surface desorption, diffusion, and reaction rates"
                        }
                    },
                    "description": "Surface desorption, diffusion, and reaction rates"
                }
            },
            "description": "Simulation parameters"
        },
        "observables": {
            "type": "object",
            "properties": {
                "filmProperties": {
                    "type": "object",
                    "properties": {
                        "uniformity": {
                            "type": "number",
                            "unit": "nm",
                            "description": "Film uniformity"
                        },
                        "roughness": {
                            "type": "number",
                            "unit": "nm",
                            "description": "Film roughness"
                        },
                        "density": {
                            "type": "number",
                            "unit": "g/cm^3",
                            "description": "Film density"
                        },
                        "temperatureProfile": {
                            "type": "string",
                            "description": "Temperature profile (thermal conduction)"
                        },
                        "chemicalComposition": {
                            "type": "object",
                            "properties": {
                                "elementAnalysis": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "description": "Element analysis (e.g., atomic percentage)"
                                    },
                                    "description": "Element analysis"
                                }
                            },
                            "description": "Chemical composition"
                        }
                    },
                    "description": "Film properties"
                },
                "bindingAffinityStickingCoefficients": {
                    "type": "object",
                    "properties": {
                        "adsorbate": {
                            "type": "string",
                            "description": "Adsorbate (precursor/etchant/inhibitor)"
                        },
                        "bindingAffinity": {
                            "type": "number",
                            "unit": "eV",
                            "description": "Binding affinity"
                        },
                        "stickingCoefficients": {
                            "type": "array",
                            "items": {
                                "type": "number",
                                "unit": "nm",
                                "description": "Sticking coefficients"
                            },
                            "description": "List of sticking coefficients"
                        }
                    },
                    "description": "Binding affinity and sticking coefficients"
                }
            },
            "description": "Observables"
        },
        "designAndOperationVariables": {
            "type": "object",
            "properties": {
                "gapDistance": {
                    "type": "number",
                    "unit": "mm",
                    "description": "Gap distance"
                },
                "purgeGasFlowRates": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "unit": "sccm",
                        "description": "Purge gas flow rates"
                    },
                    "description": "List of purge gas flow rates"
                },
                "precursorGasFlowRates": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "unit": "sccm",
                        "description": "Precursor gas flow rates"
                    },
                    "description": "List of precursor gas flow rates"
                },
                "substrateVelocity": {
                    "type": "number",
                    "unit": "m/s",
                    "description": "Substrate velocity"
                },
                "vacuumPressure": {
                    "type": "number",
                    "unit": "mbar",
                    "description": "Vacuum pressure"
                }
            },
            "description": "Design and operation variables"
        },
        "aldProcessParameters": {
            "type": "object",
            "properties": {
                "zirconiumPrecursor": {
                    "type": "string",
                    "description": "Zirconium precursor (e.g., ZrCl4)"
                },
                "waterPrecursor": {
                    "type": "string",
                    "description": "Water precursor (e.g., H2O)"
                },
                "surfaceHydroxylGroups": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "Surface hydroxyl groups (e.g., Si\u2013OH/C3)"
                    },
                    "description": "List of surface hydroxyl groups"
                },
                "reactionPathways": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "Reaction pathways (e.g., R1a, R1b, R2a, R2b, R3a, R3b)"
                    },
                    "description": "List of reaction pathways"
                }
            },
            "description": "ALD process parameters"
        },
        "surfaceReactions": {
            "type": "object",
            "properties": {
                "coReactants": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "Co-reactants (e.g., H2, atomic H, H2O, O3)"
                    },
                    "description": "List of co-reactants"
                },
                "reactionMechanisms": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "Reaction mechanisms (e.g., ligand-exchange, combustion)"
                    },
                    "description": "List of reaction mechanisms"
                }
            },
            "description": "Surface reactions"
        },
        "inputSource": {
            "type": "string",
            "description": "Input source (simulations vs experiment)"
        },
        "methodology": {
            "type": "string",
            "description": "Details of methodology"
        }
    }
}
