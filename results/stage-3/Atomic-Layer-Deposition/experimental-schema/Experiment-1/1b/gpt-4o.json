{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Atomic Layer Deposition (ALD) Process",
    "type": "object",
    "properties": {
        "ALDSystem": {
            "type": "object",
            "properties": {
                "materialDeposited": {
                    "type": "string",
                    "description": "Material deposited during the ALD process."
                },
                "ALDMethod": {
                    "type": "string",
                    "description": "Method of ALD used (e.g., PEALD, Thermal ALD)."
                }
            },
            "required": [
                "materialDeposited",
                "ALDMethod"
            ]
        },
        "reactants": {
            "type": "object",
            "properties": {
                "precursor": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The chemical name of the precursor."
                        },
                        "volatility": {
                            "type": "string",
                            "description": "Volatility characteristics of the precursor."
                        }
                    },
                    "required": [
                        "name"
                    ]
                },
                "coReactant": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The chemical name of the co-reactant."
                        }
                    },
                    "required": [
                        "name"
                    ]
                },
                "carrierGas": {
                    "type": "string",
                    "description": "Type of carrier gas used in the process."
                }
            },
            "required": [
                "precursor",
                "coReactant",
                "carrierGas"
            ]
        },
        "processParameters": {
            "type": "object",
            "properties": {
                "temperatureRange": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 2,
                    "maxItems": 2,
                    "description": "Temperature range for the deposition process in Celsius."
                },
                "pressure": {
                    "type": "number",
                    "description": "Pressure in the reactor during the ALD process in Pascals."
                },
                "substrate": {
                    "type": "string",
                    "description": "Type of substrate used in the ALD process."
                },
                "reactor": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Name of the reactor."
                        },
                        "manufacturer": {
                            "type": "string",
                            "description": "Manufacturer of the reactor."
                        }
                    }
                },
                "bubblerTemperatures": {
                    "type": "object",
                    "properties": {
                        "precursor": {
                            "type": "number",
                            "description": "Bubbler temperature for the precursor in Celsius."
                        },
                        "coReactant": {
                            "type": "number",
                            "description": "Bubbler temperature for the co-reactant in Celsius."
                        }
                    }
                },
                "thicknessControl": {
                    "type": "object",
                    "properties": {
                        "numberOfCycles": {
                            "type": "integer",
                            "description": "Total number of ALD cycles to achieve the desired film thickness."
                        },
                        "growthPerCycle": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "type": "number",
                                    "description": "Growth per cycle in nanometers."
                                },
                                "unit": {
                                    "type": "string",
                                    "enum": [
                                        "nm/cycle"
                                    ],
                                    "description": "Unit of measurement for growth per cycle."
                                }
                            },
                            "required": [
                                "value",
                                "unit"
                            ]
                        },
                        "nucleationPeriod": {
                            "type": "integer",
                            "description": "Number of cycles required to achieve self-limitation."
                        },
                        "selfLimitingGrowth": {
                            "type": "boolean",
                            "description": "Indicates whether the growth is self-limiting."
                        }
                    },
                    "required": [
                        "numberOfCycles",
                        "growthPerCycle"
                    ]
                },
                "plasmaExposure": {
                    "type": "object",
                    "properties": {
                        "plasmaType": {
                            "type": "string",
                            "description": "Type of plasma used in the process (e.g., NH3 plasma)."
                        },
                        "exposureTime": {
                            "type": "number",
                            "description": "Duration of plasma exposure in seconds."
                        },
                        "opticalEmissionSpectroscopy": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Indicates if OES is used for monitoring."
                                },
                                "wavelengthRange": {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    },
                                    "minItems": 2,
                                    "maxItems": 2,
                                    "description": "Wavelength range for OES in nanometers."
                                }
                            }
                        },
                        "gasResidenceTime": {
                            "type": "number",
                            "description": "Gas residence time during the plasma step in seconds."
                        }
                    }
                }
            },
            "required": [
                "temperatureRange",
                "pressure",
                "substrate",
                "reactor",
                "bubblerTemperatures",
                "thicknessControl"
            ]
        },
        "filmProperties": {
            "type": "object",
            "properties": {
                "structuralProperties": {
                    "type": "object",
                    "properties": {
                        "composition": {
                            "type": "string",
                            "description": "Chemical composition of the deposited film."
                        },
                        "thickness": {
                            "type": "number",
                            "description": "Final thickness of the film in nanometers."
                        },
                        "uniformity": {
                            "type": "boolean",
                            "description": "Indicates whether the film is uniform across the substrate."
                        },
                        "conformality": {
                            "type": "boolean",
                            "description": "Indicates whether the film conforms to 3D structures."
                        },
                        "density": {
                            "type": "number",
                            "description": "Density of the film in g/cm\u00b3."
                        },
                        "crystallinity": {
                            "type": "string",
                            "description": "Crystallinity of the film (e.g., amorphous, crystalline)."
                        }
                    },
                    "required": [
                        "composition",
                        "thickness",
                        "uniformity",
                        "conformality"
                    ]
                },
                "opticalProperties": {
                    "type": "object",
                    "properties": {
                        "refractiveIndex": {
                            "type": "number",
                            "description": "Refractive index of the film."
                        },
                        "absorptionCoefficient": {
                            "type": "number",
                            "description": "Absorption coefficient of the film."
                        }
                    }
                },
                "electricalProperties": {
                    "type": "object",
                    "properties": {
                        "resistivity": {
                            "type": "number",
                            "description": "Electrical resistivity of the film in ohm-meter."
                        },
                        "carrierDensity": {
                            "type": "number",
                            "description": "Carrier density in the film."
                        },
                        "mobility": {
                            "type": "number",
                            "description": "Carrier mobility in the film."
                        }
                    }
                }
            }
        },
        "safetyAndStability": {
            "type": "object",
            "properties": {
                "chemicalSafety": {
                    "type": "string",
                    "description": "Safety considerations for the chemicals used."
                },
                "filmStability": {
                    "type": "string",
                    "description": "Thermal stability of the film under various conditions."
                },
                "reproducibility": {
                    "type": "boolean",
                    "description": "Indicates whether the ALD process is reproducible."
                }
            },
            "required": [
                "chemicalSafety",
                "filmStability",
                "reproducibility"
            ]
        }
    },
    "required": [
        "reactants",
        "processParameters",
        "filmProperties",
        "safetyAndStability",
        "ALDSystem"
    ]
}