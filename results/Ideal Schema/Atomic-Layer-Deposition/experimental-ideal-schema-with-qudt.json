{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Atomic Layer Deposition (ALD) Process",
  "description": "A schema representing the steps and parameters involved in setting up and characterizing an Atomic Layer Deposition process and the deposited film.",
  "type": "object",
  "properties": {
    "aldSystem": {
      "type": "object",
      "description": "Details about the ALD system used.",
      "properties": {
        "aldMethod": {
          "type": "string",
          "description": "The specific ALD technique used, e.g., thermal ALD, plasma-enhanced ALD."
        },
        "materialDeposited": {
          "type": "string",
          "description": "The material being deposited, e.g., TiO2, Copper."
        }
      }
    },
    "reactantSelection": {
      "type": "object",
      "description": "Selection of precursor and co-reactant based on their reactivity, volatility, and safety.",
      "properties": {
        "precursor": {
          "type": "string",
          "description": "Chemical used as a precursor in the ALD process, e.g., tris(diethylamino)aluminum."
        },
        "coReactant": {
          "type": "string",
          "description": "Chemical used as a co-reactant in the ALD process, e.g., water, hydrogen plasma."
        },
        "carrierGas": {
          "type": "string",
          "description": "Type of carrier gas used in the delivery of reactants."
        }
      }
    },
    "processParameters": {
      "type": "object",
      "description": "Specific parameters under which the ALD process is carried out.",
      "properties": {
        "reactor": {
          "type": "object",
          "description": "Type and details of the reactor used for the ALD process.",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the reactor."
            },
            "manufacturer": {
              "type": "string",
              "description": "Manufacturer of the reactor."
            }
          }
        },
        "deliveryMethod": {
          "type": "string",
          "description": "Method of delivering the precursor and co-reactant to the reaction chamber."
        },
        "temperature": {
          "type": "object",
          "description": "The temperature at which deposition occurs, typically in Â°C.",
          "properties": {
            "quantityValue": {
              "type": "object",
              "properties": {
                "numericValue": {
                  "type": "number"
                },
                "unit": {
                  "type": "object",
                  "properties": {
                    "hasQuantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/Temperature"
                      ]
                    },
                    "sameAs": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/unit/DEG_C",
                        "https://qudt.org/vocab/unit/K",
                        "https://qudt.org/vocab/unit/DEG_F"
                      ]
                    }
                  }
                }
              }
            },
            "quantityKind": {
              "type": "string",
              "enum": [
                "https://qudt.org/vocab/quantitykind/Temperature"
              ]
            }
          }
        },
        "pressure": {
          "type": "object",
          "description": "The pressure within the reactor during deposition, typically in Torr.",
          "properties": {
            "quantityValue": {
              "type": "object",
              "properties": {
                "numericValue": {
                  "type": "number"
                },
                "unit": {
                  "type": "object",
                  "properties": {
                    "hasQuantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/ForcePerArea"
                      ]
                    },
                    "sameAs": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/unit/MilliM_HG"
                      ]
                    }
                  }
                }
              }
            },
            "quantityKind": {
              "type": "string",
              "enum": [
                "https://qudt.org/vocab/quantitykind/ForcePerArea"
              ]
            }
          }
        },
        "thicknessControl": {
          "type": "object",
          "description": "Control and verification of material thickness per cycle.",
          "properties": {
            "growthPerCycle": {
              "type": "object",
              "description": "The amount of material deposited per cycle, typically measured in nm per cycle.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/quantitykind/Length"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/unit/ANGSTROM"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "http://qudt.org/vocab/quantitykind/Length"
                  ]
                }
              }
            },
            "saturation": {
              "type": "boolean",
              "description": "Indicates if saturation conditions are achieved during dosing and purging."
            },
            "nucleationPeriod": {
              "type": "object",
              "description": "Initial growth behavior of the film during the first few ALD cycles, measured in cycles.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/quantitykind/Count"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/unit/UNITLESS"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "https://qudt.org/vocab/quantitykind/Count"
                  ]
                }
              }
            },
            "dosingTime": {
              "type": "object",
              "properties": {
                "precursor": {
                  "type": "object",
                  "description": "Time for dosing the precursor, measured in seconds.",
                  "properties": {
                    "quantityValue": {
                      "type": "object",
                      "properties": {
                        "numericValue": {
                          "type": "number"
                        },
                        "unit": {
                          "type": "object",
                          "properties": {
                            "hasQuantityKind": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/quantitykind/Time"
                              ]
                            },
                            "sameAs": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/unit/MilliSEC"
                              ]
                            }
                          }
                        }
                      }
                    },
                    "quantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/Time"
                      ]
                    }
                  }
                },
                "coReactant": {
                  "type": "object",
                  "description": "Time for dosing the co-reactant, measured in seconds.",
                  "properties": {
                    "quantityValue": {
                      "type": "object",
                      "properties": {
                        "numericValue": {
                          "type": "number"
                        },
                        "unit": {
                          "type": "object",
                          "properties": {
                            "hasQuantityKind": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/quantitykind/Time"
                              ]
                            },
                            "sameAs": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/unit/MilliSEC"
                              ]
                            }
                          }
                        }
                      }
                    },
                    "quantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/Time"
                      ]
                    }
                  }
                }
              }
            },
            "purgeTime": {
              "type": "object",
              "properties": {
                "precursor": {
                  "type": "object",
                  "description": "Time for purging the reactor chamber after precursor dosing, measured in seconds.",
                  "properties": {
                    "quantityValue": {
                      "type": "object",
                      "properties": {
                        "numericValue": {
                          "type": "number"
                        },
                        "unit": {
                          "type": "object",
                          "properties": {
                            "hasQuantityKind": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/quantitykind/Time"
                              ]
                            },
                            "sameAs": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/unit/MilliSEC"
                              ]
                            }
                          }
                        }
                      }
                    },
                    "quantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/Time"
                      ]
                    }
                  }
                },
                "coReactant": {
                  "type": "object",
                  "description": "Time for purging the reactor chamber after co-reactant dosing, measured in seconds.",
                  "properties": {
                    "quantityValue": {
                      "type": "object",
                      "properties": {
                        "numericValue": {
                          "type": "number"
                        },
                        "unit": {
                          "type": "object",
                          "properties": {
                            "hasQuantityKind": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/quantitykind/Time"
                              ]
                            },
                            "sameAs": {
                              "type": "string",
                              "enum": [
                                "https://qudt.org/vocab/unit/MilliSEC"
                              ]
                            }
                          }
                        }
                      }
                    },
                    "quantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/Time"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "materialProperties": {
      "type": "object",
      "description": "Assessment of the properties of the deposited film.",
      "properties": {
        "opticalProperties": {
          "type": "object",
          "properties": {
            "refractiveIndex": {
              "type": "object",
              "description": "Refractive index of the film.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/quantitykind/RefractiveIndex"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/unit/UNITLESS"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "http://qudt.org/vocab/quantitykind/RefractiveIndex"
                  ]
                }
              }
            },
            "absorptionCoefficient": {
              "type": "object",
              "description": "Optical absorption coefficient.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/quantitykind/Transmittance",
                            "https://qudt.org/vocab/quantitykind/TransmittanceDensity"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/unit/UNITLESS"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "https://qudt.org/vocab/quantitykind/Transmittance",
                    "https://qudt.org/vocab/quantitykind/TransmittanceDensity"
                  ]
                }
              }
            }
          }
        },
        "electricalProperties": {
          "type": "object",
          "properties": {
            "resistivity": {
              "type": "object",
              "description": "Electrical resistivity of the film.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/quantitykind/ElectricResistivity"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/unit/OHM-M"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "https://qudt.org/vocab/quantitykind/ElectricResistivity"
                  ]
                }
              }
            },
            "carrierDensity": {
              "type": "object",
              "description": "Carrier density in the film.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/quantitykind/ElectricChargeVolumeDensity"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/unit/C-PER-M3",
                            "http://qudt.org/3.1.0/vocab/unit/PER-M3"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "http://qudt.org/vocab/quantitykind/ElectricChargeVolumeDensity"
                  ]
                }
              }
            },
            "mobility": {
              "type": "object",
              "description": "Carrier mobility in the film.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/quantitykind/ElectronMobility"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "http://qudt.org/vocab/unit/CentiM2-PER-V-SEC",
                            "http://qudt.org/vocab/unit/M2-PER-V-SEC"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "http://qudt.org/vocab/quantitykind/ElectronMobility"
                  ]
                }
              }
            }
          }
        },
        "uniformity": {
          "type": "object",
          "description": "Assessment of film thickness uniformity across large substrate areas.",
          "properties": {
            "variation": {
              "type": "object",
              "description": "Permissible variation in film thickness, typically measured in percentage.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/quantitykind/DimensionlessRatio"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/unit/PERCENT"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "https://qudt.org/vocab/quantitykind/DimensionlessRatio"
                  ]
                }
              }
            }
          }
        },
        "conformality": {
          "type": "object",
          "description": "Ability of the film to coat 3D structures uniformly.",
          "properties": {
            "aspectRatio": {
              "type": "object",
              "description": "Aspect ratio of the 3D structures used in testing conformality.",
              "properties": {
                "quantityValue": {
                  "type": "object",
                  "properties": {
                    "numericValue": {
                      "type": "number"
                    },
                    "unit": {
                      "type": "object",
                      "properties": {
                        "hasQuantityKind": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/quantitykind/DimensionlessRatio"
                          ]
                        },
                        "sameAs": {
                          "type": "string",
                          "enum": [
                            "https://qudt.org/vocab/unit/UNITLESS"
                          ]
                        }
                      }
                    }
                  }
                },
                "quantityKind": {
                  "type": "string",
                  "enum": [
                    "https://qudt.org/vocab/quantitykind/DimensionlessRatio"
                  ]
                }
              }
            }
          }
        },
        "chemicalComposition": {
          "type": "string",
          "description": "Chemical composition of the deposited film."
        },
        "crystallinity": {
          "type": "string",
          "description": "Describes whether the film is amorphous or crystalline."
        },
        "filmDensity": {
          "type": "object",
          "description": "Density of the film, typically measured in g/cm3.",
          "properties": {
            "quantityValue": {
              "type": "object",
              "properties": {
                "numericValue": {
                  "type": "number"
                },
                "unit": {
                  "type": "object",
                  "properties": {
                    "hasQuantityKind": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/quantitykind/MassDensity"
                      ]
                    },
                    "sameAs": {
                      "type": "string",
                      "enum": [
                        "https://qudt.org/vocab/unit/GM-PER-DeciM3"
                      ]
                    }
                  }
                }
              }
            },
            "quantityKind": {
              "type": "string",
              "enum": [
                "https://qudt.org/vocab/quantitykind/MassDensity"
              ]
            }
          }
        }
      }
    },
    "otherAspects": {
      "type": "object",
      "description": "Other important aspects of the ALD process development such as safety and reproducibility.",
      "properties": {
        "safety": {
          "type": "string",
          "description": "Safety considerations for handling chemicals and reaction products."
        },
        "filmStability": {
          "type": "boolean",
          "description": "Whether the film remains stable under intended environmental conditions."
        },
        "reproducibility": {
          "type": "boolean",
          "description": "Consistency of results in repeated experiments."
        }
      }
    }
  },
  "required": [
    "aldSystem",
    "reactantSelection",
    "processParameters",
    "materialProperties",
    "otherAspects"
  ]
}
